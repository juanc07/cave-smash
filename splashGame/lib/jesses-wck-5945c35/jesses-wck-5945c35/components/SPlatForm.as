package components {	
	
	import shapes.ShapeBase;
	import wck.*;
	
	public class SPlatForm extends ShapeBase {		
	
		/*------------------------------------------------------------------Constant----------------------------------------------------------------------*/
		
		/*------------------------------------------------------------------Properties--------------------------------------------------------------------*/
		
		/*------------------------------------------------------------------Constructor----------------------------------------------------------------------*/
		
		public override function shapes():void {			
			box();
			setRandomSkin();
		}		
		
		public var contacts:ContactList;		
		
		
		private function setRandomSkin():void 
		{
			var rnd:int = ( Math.random() * this.totalFrames ) + 1;
			this.gotoAndStop( rnd );
		}
		
		/*------------------------------------------------------------------Methods----------------------------------------------------------------------*/
		
		/*------------------------------------------------------------------Setters----------------------------------------------------------------------*/
		
		/*------------------------------------------------------------------Getters----------------------------------------------------------------------*/
		
		/*------------------------------------------------------------------EventHandlers----------------------------------------------------------------*/		
	}
}